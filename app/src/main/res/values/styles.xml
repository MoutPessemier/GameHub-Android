<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="txt_field" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/textfield_width</item>
        <item name="android:layout_height">@dimen/textfield_height</item>
        <item name="android:textSize">@dimen/textfield_textsize</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="btn_large_primary" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/button_width_large</item>
        <item name="android:layout_height">@dimen/button_height_large</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/snow_white</item>
    </style>

    <style name="txt_label" parent="@style/Widget.AppCompat.TextView" >
        <item name="android:layout_width">@dimen/textfield_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/label_space</item>
        <item name="android:layout_marginTop">@dimen/margin_top_general</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="txt_validation" parent="txt_label">
        <item name="android:layout_marginTop">@dimen/label_space</item>
        <item name="android:textColor">@color/ruby_red</item>
    </style>

    <style name="txt_title" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/title_width</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_marginTop">@dimen/margin_top_title</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="txt_subtitle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/subtitle_width</item>
        <item name="android:layout_height">@dimen/subtitle_height</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:layout_marginTop">@dimen/margin_top_subtitle</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="custom_spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="android:layout_width">@dimen/spinner_width</item>
        <item name="android:layout_height">@dimen/spinner_height</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
