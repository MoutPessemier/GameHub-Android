<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="party"
            type="digitized.gamehub.domain.GameParty" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="@dimen/card_item_margin"
        app:cardCornerRadius="@dimen/card_border_radius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_party_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_item_text_margin"
                android:layout_marginTop="@dimen/card_item_text_margin"
                android:textSize="@dimen/card_party_title_font_size"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Mout's sexy hartejagen party v2" />

            <TextView
                android:id="@+id/txt_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_item_text_margin"
                android:layout_marginTop="@dimen/card_item_space_between"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_party_name"
                tools:text="Game of Heart" />

            <TextView
                android:id="@+id/txt_party_when"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_item_text_margin"
                android:layout_marginTop="@dimen/card_item_space_between"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_game_name"
                tools:text="29/12/2019" />

<!--            <TextView-->
<!--                android:id="@+id/txt_party_where"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="@dimen/card_item_text_margin"-->
<!--                android:layout_marginTop="@dimen/card_item_space_between"-->
<!--                android:layout_marginBottom="@dimen/card_item_text_margin"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/txt_party_when" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>