<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="digitized.gamehub.cardStack.GameCardsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_game_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            app:cardCornerRadius="@dimen/card_border_radius"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_game"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:contentDescription="@string/img_game_type_desc"
                    tools:srcCompat="@tools:sample/avatars[0]" />

                <TextView
                    android:id="@+id/txt_party_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_title_height"
                    android:layout_marginTop="@dimen/card_spacing"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_title_text_size" />

                <TextView
                    android:id="@+id/txt_game_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_game_size"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_game_text_size" />

                <TextView
                    android:id="@+id/txt_game_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_description_height"
                    android:layout_marginTop="@dimen/card_spacing"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_description_text_size" />


                <TextView
                    android:id="@+id/txt_party_when"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_info_height"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_info_text_size" />

                <TextView
                    android:id="@+id/txt_party_where"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_info_height"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_info_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_decline"
                        android:layout_width="32dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="@dimen/card_spacing"
                        android:layout_weight="1"
                        android:background="@drawable/ic_clear_black_32dp" />

                    <Button
                        android:id="@+id/btn_info"
                        android:layout_width="32dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="@dimen/card_spacing"
                        android:layout_marginEnd="@dimen/card_spacing"
                        android:layout_weight="1"
                        android:background="@drawable/ic_info_outline_black_32dp" />

                    <Button
                        android:id="@+id/btn_join"
                        android:layout_width="32dp"
                        android:layout_height="90dp"
                        android:layout_marginEnd="@dimen/card_spacing"
                        android:layout_weight="1"
                        android:background="@drawable/ic_done_black_32dp" />
                </LinearLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
