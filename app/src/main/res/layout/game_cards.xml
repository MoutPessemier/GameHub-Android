<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/snow_white"
            app:cardCornerRadius="@dimen/card_border_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_game"
                    android:layout_width="match_parent"
                    android:layout_height="235dp"
                    android:contentDescription="@string/img_game_type_desc"
                    tools:srcCompat="@tools:sample/avatars[0]" />

                <TextView
                    android:id="@+id/txt_game_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_title_height"
                    android:layout_marginTop="@dimen/card_spacing"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_title_text_size" />

                <TextView
                    android:id="@+id/txt_game_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_description_height"
                    android:layout_marginTop="@dimen/card_spacing"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_description_text_size" />

                <LinearLayout
                    style="android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_decline"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="@dimen/card_button_bar_width"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/card_spacing" />

                    <Button
                        android:id="@+id/btn_info"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="@dimen/card_button_bar_width"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/card_spacing"
                        android:layout_marginRight="@dimen/card_spacing" />

                    <Button
                        android:id="@+id/btn_accept"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="@dimen/card_button_bar_width"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/card_spacing" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
