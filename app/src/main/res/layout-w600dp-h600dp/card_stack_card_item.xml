<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="party"
            type="digitized.gamehub.domain.GameParty" />

        <variable
            name="game"
            type="digitized.gamehub.domain.Game" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/card_width_tablet"
            android:layout_height="@dimen/card_height_tablet"
            android:layout_marginTop="24dp"

            app:cardCornerRadius="@dimen/card_border_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_game_card"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:contentDescription="@string/img_game_type_desc"
                    tools:srcCompat="@tools:sample/avatars[0]" />

                <TextView
                    android:id="@+id/txt_party_name_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_title_height_tablet"
                    android:layout_marginTop="@dimen/card_spacing"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:paddingStart="@dimen/card_item_text_padding"
                    android:paddingEnd="@dimen/card_item_text_padding"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_title_text_size" />

                <TextView
                    android:id="@+id/txt_game_name_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_game_size_tablet"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_game_text_size" />

                <TextView
                    android:id="@+id/txt_game_description_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_description_height_tablet"
                    android:layout_marginTop="@dimen/card_spacing"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:paddingStart="@dimen/card_item_text_padding"
                    android:paddingEnd="@dimen/card_item_text_padding"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_description_text_size" />


                <TextView
                    android:id="@+id/txt_party_when_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_info_height_tablet"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:paddingStart="@dimen/card_item_text_padding"
                    android:paddingEnd="@dimen/card_item_text_padding"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_info_text_size" />

                <TextView
                    android:id="@+id/txt_party_where_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_info_height_tablet"
                    android:layout_marginBottom="@dimen/card_spacing"
                    android:paddingStart="@dimen/card_item_text_padding"
                    android:paddingEnd="@dimen/card_item_text_padding"
                    android:textAlignment="center"
                    android:textSize="@dimen/card_info_text_size" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/left_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/overlay_black">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_thumb_down_black_240dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/right_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/overlay_black">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_thumb_up_black_240dp" />

            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

