<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/gameCardsFragment">

    <fragment
        android:id="@+id/gameCardsFragment"
        android:name="digitized.gamehub.views.GameCardsFragment"
        android:label="GameCardsFragment" >
        <action
            android:id="@+id/action_gameCardsFragment_to_gamePartyInfoFragment"
            app:destination="@id/gamePartyInfoFragment"
            app:popUpTo="@+id/gameCardsFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_account_view"
        android:name="digitized.gamehub.views.AccountSettingsFragment"
        android:label="AccountSettingsFragment" >
        <action
            android:id="@+id/action_nav_account_view_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_create_game_view"
        android:name="digitized.gamehub.views.CreateGameFragment"
        android:label="CreateGameFragment" />
    <fragment
        android:id="@+id/nav_create_party_view"
        android:name="digitized.gamehub.views.CreatePartyFragment"
        android:label="CreatePartyFragment" />
    <fragment
        android:id="@+id/gamePartyInfoFragment"
        android:name="digitized.gamehub.views.GamePartyInfoFragment"
        android:label="GamePartyInfoFragment" >
        <action
            android:id="@+id/action_gamePartyInfoFragment_to_gameCardsFragment"
            app:destination="@id/gameCardsFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="digitized.gamehub.views.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_gameCardsFragment"
            app:destination="@id/gameCardsFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_map_view"
        android:name="digitized.gamehub.map.MapFragment"
        android:label="MapFragment" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="digitized.gamehub.views.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>